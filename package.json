{
  "name": "monot",
  "version": "1.0.0",
  "description": "The new web browser \"Monot\"",
  "main": "main.js",
  "scripts": {
    "test": "npx electron .",
    "build": "npx electron-builder",
    "makeEnv": "src\\environment.cmd"
  },
  "author": "Sorakime",
  "license": "ISC",
  "devDependencies": {
    "electron": "^16.0.2",
    "electron-builder": "^22.14.5"
  },
  "build": {
    "appId": "me.soraki.monot",
    "productName": "Monot",
    "files": [
      "!.git",
      "!.dist",
      "node_modules",
      "src",
      "main.js",
      "package-lock.json",
      "package.json"
    ],
    "asar": false,
    "win": {
      "icon": "src/image/logo.ico",
      "target": "nsis",
      "legalTrademarks": "Copyright 2021 Sorakime."
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/image/logo.ico"
    },
    "linux": {
      "icon": "src/image/icon.png",
      "target": "AppImage"
    },
    "appImage": {
      "category": "Utility",
      "synopsis": "Monot ver1.0b6Build6"
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.1.1"
  }
}
